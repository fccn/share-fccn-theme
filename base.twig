<!DOCTYPE html>
<html class="no-js" lang="{% if config.lang %}{{ config.lang }}{% else %}pt-PT{% endif %}">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{% if meta.title %}{{ meta.title }} | {% endif %}{{ site_title }}</title>
    {% if meta.description %}
        <meta name="description" content="{{ meta.description|striptags }}" />
    {% endif %}
    {% if meta.robots %}
        <meta name="robots" content="{{ meta.robots }}" />
    {% endif %}

    {% if current_page %}
        <link rel="canonical" href="{{ current_page.url }}" />
    {% endif %}
    <link rel="icon" href="{{ theme_url }}/img/cropped-icon_fccn_simples-32x32.png" sizes="32x32">
    <link rel="icon" href="{{ theme_url }}/img/cropped-icon_fccn_simples-192x192.png" sizes="192x192">
    <link rel="stylesheet" href="{{ theme_url }}/css/styles.css" type="text/css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.1.0/styles/default.min.css">
</head>
<body{% if config.theme_config.widescreen %} class="widescreen"{% endif %}>
    {% include "partials/header.twig" %}

    <main id="main-content">
        <div id="page-title" class="header-{% if pages["_meta"].meta.area %}{{ pages["_meta"].meta.area}}{% else %}default{% endif %}">
            <div class="container">
                <h1>{{ meta.title }}</h1>
            </div>
        </div>
        <div class="container">
        {% block content %}
        {% endblock %}
        </div>
    </main>

    {% include "partials/footer.twig" %}
    <script src="{{ theme_url }}/js/modernizr-3.3.1-custom.min.js"></script>
    <script src="{{ theme_url }}/js/utils.js"></script>
    <script src="{{ theme_url }}/js/pico.js"></script>
    <script src="{{ theme_url }}/js/darkmode.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/highlight.js/11.1.0/highlight.min.js"></script>
    <script>hljs.highlightAll();</script>
    {% block scripts %}{% endblock %}
</body>
</html>
